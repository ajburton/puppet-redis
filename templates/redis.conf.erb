daemonize yes
pidfile /var/run/redis.pid
port <%= port %>
bind <%= bind %>
timeout 300
loglevel verbose
logfile /var/log/redis/redis-server.log
databases 16

<% if !aof -%>
save 900 1
save 300 10
save 60 10000
<% end -%>

rdbcompression yes
dbfilename dump.rdb
dir /var/lib/redis

<% unless masterip.empty? -%>
slaveof <%= masterip %> <%= masterport %>
<% end -%>

<% unless masterauth.empty? -%>
masterauth <%= masterauth %>
<% end -%>

slave-serve-stale-data yes

<% unless requirepass.empty? -%>
requirepass <%= requirepass %>
<% end -%>

appendonly <% if aof %>yes<% else %>no<% end%>

appendfsync everysec
no-appendfsync-on-rewrite no

<% if aof -%>
auto-aof-rewrite-percentage <%= aof_auto_rewrite_percentage %>
auto-aof-rewrite-min-size <%= aof_auto_rewrite_min_size %>
<% end -%>

slowlog-log-slower-than 10000
slowlog-max-len 1024

hash-max-zipmap-entries 512
hash-max-zipmap-value 64

list-max-ziplist-entries 512
list-max-ziplist-value 64

set-max-intset-entries 512

zset-max-ziplist-entries 128
zset-max-ziplist-value 64

activerehashing yes
